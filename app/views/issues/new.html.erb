<div class="page-header">
  <h1>Add Issue</h1>
</div>

<%= form_for [@project, @workflow, @issue] do |f| %>
  <% if@issue.errors.any? %>
    <% @issue.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <%end%>
  <div>
    <%= f.label :title%>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :assigned_to %>
    <%= f.select :assigned_to, @users.map{ |user| [user.name, user.id] },:prompt => "Please select" %>
  </div>
  <div >
    <%= f.label :started_on %>
    <%= f.text_field :started_on,  class: 'datepicker' %>
  </div>
  <div>
    <%= f.label :completed_by %>
    <%= f.text_field :completed_by,  class: 'datepicker' %>
  </div>
  <div>
    <%= f.label :estimate %>
    <%= f.text_field :estimate %>
  </div>
  <%= f.submit "submit", class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>







