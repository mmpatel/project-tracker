<div class= "page-header">
  <h1><%= @workflow.name.capitalize %></h1>
  <%= link_to "Add Issue", new_project_workflow_issue_path( @project, @workflow ), class: 'pull-right btn btn-primary'%>
</div>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Show</th>
      <th>Attachments</th>
    </tr>
  </thead>
  <tbody>
    <% @workflow.issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= link_to "Edit", edit_project_workflow_issue_path(@project, @workflow, issue) %></td>
        <td><%= link_to "Show", project_workflow_issue_path(@project, @workflow, issue) %>
        <% if issue.attachments.present? %>
          <% issue.attachments.each do |attachment| %>
            <td><%= link_to "download", attachment.avatar_url %></td>
          <% end %>
        <% else %>
          <td>Not available</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>